<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_top_actionBar"
    android:paddingRight="@dimen/activitySecondRow_paddingLeftRight"
    android:paddingLeft="@dimen/activitySecondRow_paddingLeftRight"
    android:paddingTop="@dimen/activitySecondRow_paddingTopBottom"
    android:paddingBottom="@dimen/activitySecondRow_paddingTopBottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/listItem_height"
        android:paddingLeft="@dimen/activitySecondRow_paddingTopBottom"
        android:paddingRight="@dimen/activitySecondRow_paddingTopBottom"
        android:layout_marginLeft="@dimen/activitySecondRow_paddingTopBottom"
        android:layout_marginRight="@dimen/activitySecondRow_paddingTopBottom"
        android:id="@+id/description"
        android:layout_alignParentTop="true"
        android:textColor="@color/viewTitle"
        android:textSize="16sp"
        android:background="@drawable/textlines"/>


</RelativeLayout>