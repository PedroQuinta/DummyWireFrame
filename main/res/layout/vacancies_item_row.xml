<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/vacanciesRow"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/cardVacancieView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonsVacancies">
            <Button
                android:id="@+id/btnVacancieA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorJumbotron"
                android:layout_weight="1"
                android:layout_margin="@dimen/activityThirdRowMargin"
                android:paddingTop="@dimen/activityThirdPaddingTop"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btnVacancieB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorJumbotron"
                android:textColor="@color/black"
                android:paddingTop="@dimen/activityThirdPaddingTop"
                android:layout_margin="@dimen/activityThirdRowMargin"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
